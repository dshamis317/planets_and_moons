<h1>Update <%= @planet.name %></h1>

<%= form_for @planet, url: {action: "update"}, html: {class: "edit_planet_form"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label "Image URL" %>
  <%= f.text_field :image_url %>
  <%= f.label "Life? " %>
  <%= f.label "Yes" %>
  <%= f.radio_button :life, "Yes", :value => true %>
  <%= f.label "No" %>
  <%= f.radio_button :life, "No", :value => false %>
  <%= f.submit "Update" %>
<% end %>
